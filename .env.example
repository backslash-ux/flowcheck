# FlowCheck Configuration Template
# Copy this to .env and fill in your values

# Logging Configuration
FLOWCHECK_LOG_LEVEL=INFO

# Storage Configuration
FLOWCHECK_STORAGE_PATH=/data/flowcheck

# Session Configuration
FLOWCHECK_SESSION_TIMEOUT=3600

# LLM Configuration - Primary
ANTHROPIC_API_KEY=sk-ant-your-key-here

# LLM Configuration - Fallback
OPENAI_API_KEY=sk-your-key-here

# Server Configuration
FLOWCHECK_SERVER_HOST=0.0.0.0
FLOWCHECK_SERVER_PORT=8000

# Rules Engine Configuration
FLOWCHECK_RULES_PATH=/data/flowcheck/rules

# Semantic Search Configuration
FLOWCHECK_SEMANTIC_INDEX_PATH=/data/flowcheck/semantic_index.db

# Git Configuration
FLOWCHECK_GIT_REPO_PATH=/app

# Audit Logging
FLOWCHECK_AUDIT_LOG_PATH=/data/flowcheck/audit.log
FLOWCHECK_AUDIT_MAX_SIZE_MB=10

# Debug Mode (development only)
FLOWCHECK_DEBUG=false
